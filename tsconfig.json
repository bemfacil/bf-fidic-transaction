{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "lib": ["es2018"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build"]
  }
  